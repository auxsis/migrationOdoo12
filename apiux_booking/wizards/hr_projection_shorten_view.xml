            <field name="model">hr.proj.shorten</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="booking_id" readonly="1"/>	
                            <field name="to_date" required="1"/>	
					
                        </group>
                    </group>
				
                    <footer>
                        <button name="action_generate" type="object" string="Acortar" confirm="Se borran los Staffing/WBS no necesitados!. Quiere seguir?"/> <!-- Action Button -->
